<div class="container">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><%= link_to "ホーム", home_path %></li>
        <li><%= link_to "トピック", board_categories_path %></li>
        <li class="active"><%= @board_category.name %></li>
      </ol>

      <%= render partial: "shared/notice" %>

      <legend><%= @board_category.name %></legend>

      <p><%= link_to "トピックを投稿", new_board_category_board_path(@board_category), class: "btn btn-inverse" %></p>

      <% if @board_category.boards.count > 0 %>
      <table id="boards" class="table table-striped table-hover table-condensed table-condensed">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>投稿日時</th>
            <th>投稿者</th>
          </tr>
        </thead>
        <tbody>
          <% @board_category.boards.each do |board| %>
          <tr>
            <td><%= link_to board.title, board_path(board) %></td>
            <td><%= time_format board.created_at %></td>
            <td><%= link_to board.user.fullname, user_path(board.user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
      <p>トピックが投稿されていません</p>
      <% end %>
      
    </div>
  </div>
</div>
