<div class="container">
  <div class="row">
    <div class="col-md-3" style="font-size:small;">
      <h6><%= @user.fullname %></h6>
      <p><%= @user.fullname_kana %></p>
      <span class="glyphicon glyphicon-envelope"></span> <%= @user.email %>

      <hr>

      <h6>グループ</h6>
      <% if @user.groups.count > 0 %>
      <% @user.groups.each do |group| %>
      <%= link_to group.name, group_path(group) %><br>
      <% end %>
      <% else %>
      所属しているグループはありません。
      <% end %>

      <% if @user.qa_categories.count > 0 %>
      <hr>

      <h6>Q&Aカテゴリ</h6>

      <% @user.qa_categories.each do |category| %>
      <%= link_to category.name, qa_category_path(category) %><br>
      <% end %>
      <% end %>
    </div>

    <div class="col-md-9">
      <div class="row">
        <div class="col-md-12">
          <div class="well">
            <h6>関連するトピック</h6>
            <hr>

            <% if @topics.count > 0 %>
            <table class="table table-striped table-hover table-condensed table-condensed">
              <thead>
                <tr>
                  <th>タイトル</th>
                  <th>投稿者</th>
                </tr>
              </thead>

              <tbody>
                <% @topics.each do |topic| %>
                <tr>
                  <td><%= link_to topic.title, board_path(topic) %></td>
                  <td><%= link_to topic.user.fullname, user_path(topic.user) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <% else %>
            <p>関連するトピックはありません</p>
            <% end %>
          </div>

          <div class="well">
            <h6>関連するQ&A</h6>
            <hr>
            
            <% if @questions.count > 0 %>
            <table class="table table-striped table-hover table-condensed table-condensed">
              <thead>
                <tr>
                  <th>タイトル</th>
                  <th>投稿者</th>
                </tr>
              </thead>

              <tbody>
                <% @questions.each do |question| %>
                <tr>
                  <td><%= link_to question.title, question_path(question) %></td>
                  <td><%= link_to question.user.fullname, user_path(question.user) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <% else %>
            <p>関連するQ&Aはありません</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
