<%= form_for(@board_category) do |f| %>
  <%= render partial: "shared/errors", object: @board_category.errors %>

  <div class="form-group">
    <%= f.label :name, "", class: "control-label sr-only" %>
    <%= f.text_field :name, class: "form-control", placeholder: "カテゴリ名", maxlength: 30, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, "", class: "control-label sr-only" %>
    <%= f.text_field :description, class: "form-control", placeholder: "説明", maxlength: 100 %>
  </div>

  <%= f.submit "保存", class: "btn btn-primary" %>
<% end %>
