<%= form_for([@qa_category, @question]) do |f| %>
  <%= render partial: "shared/errors", object: @question.errors %>

  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :replay_deadline, "", class: "control-label" %>
        <%= f.select :replay_deadline, [["至急", "至急"], ["1週間以内", "1週間以内"], ["手が空いたら", "手が空いたら"]], {}, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :status, "", class: "control-label" %>
        <%= f.select :status, [["新規", "新規"], ["調査中", "調査中"], ["保留", "保留"], ["回答済", "回答済"], ["解決済み", "解決済み"], ["未解決", "未解決"]], {}, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, "", class: "control-label sr-only" %>
    <%= f.text_field :title, class: "form-control", placeholder: "タイトル", maxlength: 40, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :body, "", class: "control-label sr-only" %>
    <%= f.text_area :body, class: "form-control resize", placeholder: "本文", required: true %>
  </div>

  <%= f.submit "保存", class: "btn btn-primary" %>
<% end %>
